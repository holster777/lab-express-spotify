

<div class="container">

{{#each artists}}

    <div class="box">
        <div class="card">
            <div class="card-img" style="background-image:url({{this.images.0.url}}); background-size:cover; background-position: center;"></div>
            <div class="overlay">
            <a class="card-btn" href="/albums/{{this.id}}"> View Albums</a>
            </div>
        </div>
        <div class= "info-box">
            <h2>{{this.name}}</h2>
        </div>
    </div>

{{/each}}

</div>


